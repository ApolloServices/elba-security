// db/schema.prisma
generator client {
  provider = "prisma-client-js"
  output   = "../node_modules/.prisma/client"
}

// ...

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Integration {
  id             Int      @id @default(autoincrement())
  organisationId String
  notionToken    String
  notionId       String
  createdAt      DateTime @default(now())
}
